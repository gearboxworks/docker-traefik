#!/bin/bash
# {{ .CreationInfo }}

# See gearboxworks/gearbox-base for details.
. /build/include-me.sh

c_ok "Started."

c_ok "Installing packages."
if [ -f /build/build-{{ .Json.name }}.apks ]
then
	APKS="$(cat /build/build-{{ .Json.name }}.apks)"
	apk update && apk add --no-cache ${APKS}; checkExit
fi

if [ -f /build/build-{{ .Json.name }}.env ]
then
	. /build/build-{{ .Json.name }}.env
fi

if [ ! -d /usr/local/bin ]
then
	mkdir -p /usr/local/bin; checkExit
fi

c_ok "Finished."
